@model MyChat.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="row justify-content-center align-items-center p-3 m-0" style="height: 80vh;">
    <div class="col-md-6 shadow p-5">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Login" class="btn btn-primary" />
                <a class="mx-2" asp-action="Register" asp-controller="Account">Register</a>
            </div>
        </form>
    </div>
</div>

